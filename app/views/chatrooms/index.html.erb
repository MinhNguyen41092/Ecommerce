<h1 class="text-center">Chatrooms list</h1>

<ul>
  <% @chatrooms.each do |room| %>
    <li>
      <%= link_to room.topic, chatroom_path(room) %>
    </li>
    <%= link_to room, method: :delete, data: {confirm: "Are you sure"} do %>
        <button type="button" class="close del_chatroom" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      <% end %>
  <% end %>
</ul>
