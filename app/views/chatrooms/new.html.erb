<%= render "shared/errors", obj: @chatroom %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= form_for @chatroom do |f| %>
        <%= f.label :topic %>
        <%= f.text_field :topic %>

        <%= f.hidden_field :user_id, value: current_user.id %>

        <%= f.submit "Create chatroom", class: "btn btn-xs btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
