<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= form_for @category do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :parent_id, t("categories.parent") %>
        <%= f.collection_select :parent_id, Category.all, :id, :name, prompt: t("categories.choose") %>

        <%= f.submit @category.new_record? ? t("categories.create") : t("categories.update"),
          class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
